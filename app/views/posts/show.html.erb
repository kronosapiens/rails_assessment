<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<br>

<h3>Comments:</h3>

<% @comments.each do |comment| %>
<h5><%= comment.author %> says:</h5>
<p><%= comment.content %></p>
<% end %>

<h4>Add Comment:</h4>

<%= render 'comment' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
